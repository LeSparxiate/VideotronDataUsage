<Window x:Class="VideotronDataUsage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideotronDataUsage"
        mc:Ignorable="d"
        Title="Videotron Data Usage" Height="100" Width="400" ResizeMode="CanMinimize" Icon="./Assets/appIcon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <Label Content="UserKey : " VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"></Label>
        <TextBox Grid.Column="1" Name="userkey" Width="150" Height="20" ToolTip="User Key" VerticalAlignment="Center"/>
        <Button Grid.Column="2" Name="save" Width="80" Height="25" Content="Sauvegarder" Click="save_Click"/>
    </Grid>
</Window>
